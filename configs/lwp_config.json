{
    "target_dataset":{
        "name": "hsol",
        "dev_rate": 0.1
    },
    "poison_dataset":{
        "name": "hsol",
        "dev_rate": 0.1
    },
    "victim":{
        "type": "plm",
        "model": "bert",
        "path": "bert-base-uncased",
        "num_classes": 2,
        "device": "gpu",
        "max_len": 512
    },
    "attacker":{
        "name": "lwp",
        "metrics": ["accuracy"],
        "sample_metrics": ["ppl", "grammar", "use"],
        "train":{
            "name": "lwp",
            "lr": 2e-5,
            "weight_decay": 0,
            "epochs": 5,
            "batch_size": 32,
            "warm_up_epochs": 0,
            "ckpt": "best",
            "save_path": "./models"
        },
        "poisoner":{
            "name": "lwp",
            "poison_rate": 0.1,
            "target_label": 1,
            "label_consistency": false,
            "label_dirty": false,
            "load": false
        }
    },

    "clean-tune": false,

    "train":{
        "name": "base",
        "lr": 1e-4,
        "weight_decay": 0,
        "epochs": 3,
        "batch_size": 32,
        "warm_up_epochs": 0,
        "ckpt": "best",
        "save_path": "./models"
    }

}
